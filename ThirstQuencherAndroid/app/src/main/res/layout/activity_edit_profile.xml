<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_intro_overlay_button_background_color"
    android:backgroundTint="@color/wallet_highlighted_text_holo_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controller.EditProfileActivity">

    <LinearLayout
        android:id="@+id/editProfileRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editProfileEmailAddressTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editProfileEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editProfileRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileRow1"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editProfileUsernameTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editProfileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editProfileRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileRow2"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editProfileHomeAddressTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address:"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editProfileHomeAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editProfileRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileRow3"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editProfileTitleTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editProfileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editProfileRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileRow4"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editProfileAccountTypeTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Type:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/editProfileAccountType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/editProfileSaveButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileRow5"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="editProfileSaveRequest"
        android:text="SAVE" />

    <Button
        android:id="@+id/editProfileCancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileSaveButton"
        android:layout_marginTop="24dp"
        android:onClick="cancelEditProfile"
        android:text="CANCEL" />

</RelativeLayout>
