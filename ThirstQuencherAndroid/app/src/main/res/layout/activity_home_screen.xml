<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_intro_overlay_button_background_color"
    android:backgroundTint="@color/wallet_highlighted_text_holo_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controller.HomeScreenActivity">

    <Button
        android:id="@+id/createReportButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="createReport"
        android:text="Create Source Report" />

    <Button
        android:id="@+id/viewReportsButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@color/place_autocomplete_prediction_primary_text_highlight"
        android:onClick="viewReports"
        android:text="View Source Reports"
        android:layout_below="@+id/createReportButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/viewReportsMapButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="viewMap"
        android:text="View Map"
        android:layout_below="@+id/viewReportsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/viewProfileButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@color/place_autocomplete_prediction_primary_text_highlight"
        android:onClick="viewProfile"
        android:text="View Profile"
        android:layout_below="@+id/viewReportsMapButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/logoutButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:onClick="logOut"
        android:text="Log Out"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/createQualityReportButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="?android:attr/colorPrimaryDark"
        android:onClick="createQualityReport"
        android:text="Create Quality Report"
        android:layout_below="@+id/viewProfileButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/viewQualityReportButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:onClick="viewQualityReports"
        android:text="View Quality Reports"
        android:layout_below="@+id/viewQualityReportGraph"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/viewQualityReportGraph"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/createQualityReportButton"
        android:layout_marginTop="10dp"
        android:background="@color/place_autocomplete_prediction_primary_text_highlight"
        android:onClick="graphSearch"
        android:text="View Quality Report Graph"
        android:visibility="gone" />

</RelativeLayout>