<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anmol.thirstquencher.CreateReportActivity">

    <LinearLayout
        android:id="@+id/createReportRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/createReportLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Location:"/>
        <EditText
            android:id="@+id/createReportEnterLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/createReportRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/createReportRow1"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/createReportWaterType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Water Type:"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createReportWaterTypeSpinner" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/createReportRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/createReportRow2"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/createReportWaterCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Water Type:"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createReportWaterConditionSpinner" />
    </LinearLayout>

    <Button
        android:id="@+id/submitReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/createReportRow3"
        android:layout_alignParentStart="true"
        android:text="SUBMIT REPORT"
        android:onClick="submitReport"/>
    <Button
        android:id="@+id/cancelSubmitReportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/submitReportButton"
        android:layout_alignBottom="@+id/submitReportButton"
        android:text="CANCEL"
        android:onClick="cancelSubmitReport"/>

</RelativeLayout>
